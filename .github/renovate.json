{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:best-practices",
      "group:allNonMajor",
      ":semanticCommitTypeAll(chore)"
    ],
    "enabledManagers": ["pep621", "pyenv", "github-actions", "dockerfile", "mise"],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": true
    },
    "labels": [
        "renovate"
    ]
}
